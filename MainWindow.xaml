<Window x:Class="ESOW.MainWindow"
        xmlns:local="clr-namespace:ESOW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ESOW"
        Visibility="Visible" Closing="Window_Closing"
        Style="{DynamicResource WindowStyle}" MinWidth="968" MinHeight="571" Width="1288" Height="751" Background="#FFC5DCFF" Foreground="{x:Null}">
    <Window.Resources>
        <ControlTemplate TargetType="TabItem" x:Key="tabButt">
            <Border>
                <Border.Background>
                    <SolidColorBrush x:Name="Bruh" Color="Transparent"/>
                </Border.Background>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup Name="States">
                        <VisualState Name="MouseOver">
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="Bruh" Storyboard.TargetProperty="Color" To="#02C5DCFF"/>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Image HorizontalAlignment="Left" Height="2.5 cm" Margin="10,10,0,0" VerticalAlignment="Top" Source="Resources/logo.png" Panel.ZIndex="5"/>
        <TabControl Name="TabCont" TabStripPlacement="Left" Grid.Row="2" Grid.ColumnSpan="2" Background="{x:Null}" BorderBrush="{x:Null}" Margin="10" TabIndex="214748364" Panel.ZIndex="1" >
            <TabItem Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="0.1" Height="2.4 cm" Margin="-50,-2,0,-2"/>

            <TabItem Name="ReadyTextList" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="0">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition MinWidth="60" MaxWidth="2.5 cm"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15" />
                            <RowDefinition MinHeight="60" MaxHeight="2.5 cm" />
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="1" Grid.Column="1" Source="Resources/Texts.png" Panel.ZIndex="5" />
                        <Image Grid.RowSpan="3" Grid.ColumnSpan="3" Source="Resources/k.png" Stretch="Fill" Panel.ZIndex="1" />
                    </Grid>
                </TabItem.Header>
                <Grid Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5 cm"/>
                        <RowDefinition Height="300*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer  Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="Panel" >

                        </StackPanel>
                    </ScrollViewer>
                    <Image Source="kisspng-bongo-cat-pixel-art-bongo-cat-pixel-art-bongo-drum-5ca995811bf5d0.6900605915546177291145.png" Grid.Column="1" Grid.Row="1"/>
                    <Label Content="Select text" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" />

                </Grid>
            </TabItem>

            <TabItem Name="UserTextZone" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="0">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition MinWidth="60" MaxWidth="2.5 cm"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10" />
                            <RowDefinition MinHeight="60" MaxHeight="2.5 cm"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="1" Grid.Column="1" Source="Resources/CustomText.png" Panel.ZIndex="5" />
                        <Image Grid.RowSpan="3" Grid.ColumnSpan="3" Source="Resources/k.png" Stretch="Fill" Panel.ZIndex="1" />
                    </Grid>
                </TabItem.Header>
                <Grid Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="60*"/>
                        <RowDefinition Height="82*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180*"/>
                        <ColumnDefinition Width="103*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="119*"/>
                        <ColumnDefinition Width="179*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="kisspng-bongo-cat-pixel-art-bongo-cat-pixel-art-bongo-drum-5ca995811bf5d0.6900605915546177291145.png" 
                           Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" AllowDrop="True" Drop="DropEvent" >
                    </Image>
                    <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Style="{DynamicResource TextBlockStyle}">
                        Tittle
                    </TextBlock>
                    <TextBox Name ="CustomTittle" Text="" Grid.Row="1" Grid.Column="3" Margin="10" Style="{DynamicResource TextBoxStyle}"></TextBox>

                    <TextBlock Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Style="{DynamicResource TextBlockStyle}">
                        Author
                    </TextBlock>
                    <TextBox Name ="CustomA" Text="" Grid.Row="3" Grid.Column="3" Margin="10" Style="{DynamicResource TextBoxStyle}"></TextBox>
                    <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="30" Name="MakeCustomButton" Content="Load Custom Text" FontSize="15" Click="MakeCustomButton_OnClick" Style="{DynamicResource ButtonStyle}" ></Button>


                </Grid>


            </TabItem>

            <TabItem Name="DictZone" Foreground="{x:Null}" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0">
                <TabItem.Header >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition MinWidth="60" MaxWidth="2.5 cm"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10" />
                            <RowDefinition MinHeight="60" MaxHeight="2.5 cm"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="1" Grid.Column="1" Source="Resources/Dict.png" Panel.ZIndex="5" />
                        <Image Grid.RowSpan="3" Grid.ColumnSpan="3" Source="Resources/k.png" Stretch="Fill" Panel.ZIndex="1" />
                    </Grid>
                </TabItem.Header>
                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="600*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="300*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <ListBox Name="ListBox" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Column="1" Grid.Row="1"  >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Name="DictPanel"  Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Name="TextBlock"  Text="{Binding Path=Key}"  Grid.Column="10" MouseEnter="CreateToolTip" Margin="15,15,15,0" Style="{DynamicResource TextBlockStyle}">
                                            <ComboBox ItemsSource="{Binding Path=Value, Mode=OneWay}"  Text="{Binding Path=Value[0]}"  Grid.Column="10" Grid.Row="10" Margin="15,15,15,0">

                                            </ComboBox>

                                        </TextBlock>


                                    </Grid>

                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>




                    </ListBox>
                    <Button Content="Button" Grid.Column="1"  Width="100" Height="50"  Style="{DynamicResource ButtonStyle}"/>



                </Grid>
            </TabItem>

            <TabItem Name="WorkZone" Height="0"  Width="0"  >
                <Grid Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2.5 cm"/>
                        <RowDefinition Height="46*"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <RichTextBox Name="WorkBox"  Grid.Row="1" Grid.RowSpan="4" Margin="5,0,5,5" AutoWordSelection="True" IsReadOnly="True" Style="{DynamicResource TextStyle}" BorderBrush="{x:Null}" FontFamily="Ubuntu" FontSize="14" Block.LineHeight="6" >
                        <RichTextBox.Background>
                            <SolidColorBrush Color="{DynamicResource mainBG}"/>
                        </RichTextBox.Background>
                        <RichTextBox.SelectionBrush>
                            <SolidColorBrush Color="#FF9696FF"/>
                        </RichTextBox.SelectionBrush>
                        <FlowDocument >
                            <Paragraph Padding="0,0,0,8">
                                <Run Text="123"/>
                            </Paragraph>

                        </FlowDocument>
                    </RichTextBox>
                    <Button Content="Translate" Name="TranslateBotton" Grid.Row="3" Grid.Column="1" Margin="15" Click="TranslateButton" Style="{DynamicResource ButtonStyle}"></Button>
                    <RichTextBox Name="ResBox" Grid.Column="1"  Grid.Row="1" Margin="10,0" Style="{DynamicResource TextStyle}" />
                    <Label Name="WorkTittle" Content="Tittle" Grid.Row="0" Grid.Column="0"  FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"  />
                    <Button Content="ShowTranslate" Grid.Row="4" Grid.Column="1" Margin="10" Name="TempBut" Click="ShowTranslateButton" Style="{DynamicResource ButtonStyle}" ></Button>
                    <Button Name="AddToDict" Grid.Row="2" Grid.Column="1" Margin="15" Content="Add to dictionary" Click="AddToDict_OnClick" Style="{DynamicResource ButtonStyle}"></Button>

                </Grid>

            </TabItem>
            <TabItem Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="0">
                <TabItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition MinWidth="60" MaxWidth="2.5 cm"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10" />
                            <RowDefinition MinHeight="60" MaxHeight="2.5 cm"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="1" Grid.Column="1" Source="Resources/Settings.png" Panel.ZIndex="5" />
                        <Image Grid.RowSpan="3" Grid.ColumnSpan="3" Source="Resources/k.png" Stretch="Fill" Panel.ZIndex="1" />
                    </Grid>
                </TabItem.Header>
                <Grid Margin="10,0,0,0">
                    <RadioButton Content="Default" VerticalAlignment="Top" Checked="WhiteThemeChanger" IsChecked="True" Margin="0,100,0,0"/>
                    <RadioButton Content="Dark" VerticalAlignment="Center" Checked="DarkThemeChanger" />
                    <Button Height="100" Width="100" Style="{DynamicResource ButtonStyle}"></Button>


                </Grid>
            </TabItem>

        </TabControl>

    </Grid>

</Window>


